<div class="container-fluid m-4 px-2">
<div class="container-fluid d-flex flex-wrap justify-content-around">
      {{#each products}}
    <div class="card mx-2 my-2 flex-shrink-1" style="width: 18rem;">
      <img src={{thumbnail}} class="card-img-top product-thumbnail" alt="imagen">
      <div class="card-body">
        <h5 id="titleModal" class="card-title">{{title}}</h5>
        <p id="descriptionModal" class="card-text">{{description}}</p>
        <p class="card-text">{{marca}}</p>
        <p class="card-text">Código:{{code}}</p>
        <p  class="card-text">{{price}}</p>
        <p class="card-text">Stock disponible:{{stock}}</p>
        <span class="product-id"></span>
         <button class="Cart-view btn btn-primary" type="button" 
         data-bs-toggle="offcanvas" data-bs-target="#staticBackdrop" aria-controls="staticBackdrop"
         data-product-view-id={{this._id}}>
          Detalle del Producto
        </button> 
          <button type="button" class="Add-Cart btn btn-primary" data-producto-id={{this._id}}>Agregar</button>     
      </div>
    </div>
    <!--Offcanvas para el detalle del producto-->

<div class="offcanvas offcanvas-start" data-bs-backdrop="static" tabindex="-1" id="staticBackdrop" aria-labelledby="staticBackdropLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="staticBackdropLabel">Offcanvas</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>          
  <div class="offcanvas-body">
    <div>
      
    <p>{{_id}}</p>
    <img src={{thumbnail}} class="card-img-top product-thumbnail" alt="imagen">
     <p>{{title}}</p>

    </div>
  </div>
    <button type="button" class="Add-Cart btn btn-primary" data-producto-id={{this._id}}>Agregar</button>
</div>
 <!-- Modal para el carrito -->
<div class="modal fade" id="exampleModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Carrito de compras</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!--Modal del Body-->
              {{#if productos.length}}
          <table class="table">
            <thead>
              <tr>
                <th>Producto</th>
                <th>Precio</th>
                <th>Cantidad</th>
              </tr>
            </thead>
            <tbody>
              {{#each productos}}
                <tr>
                  <td>{{name}}</td>
                  <td>{{price}}</td>
                  <td>{{quantity}}</td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        {{else}}
          <p>El carrito está vacío.</p>
        {{/if}}
      </div>
      <div class="modal-footer">
        <p class="text-center" id="precioTotal"></p>
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal" id="boton-vaciar">Vaciar Carrito</button>
        <button class="btn btn-primary" id="procesarCompra" type="button"  data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" role="button" aria-controls="offcanvasExample">Continuar Compra</button>

        <!--canvas con orden del pedido-->

      <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="offcanvasExampleLabel">Offcanvas</h5>
          <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
              <form id="procesar-pago">
                <div class="form-group row">
                  <label for="cliente" class="col-4 col-md-4 col-xs-4 col-form-label">Nombre:*</label>
                  <input type="text" id="cliente" class="form-control" placeholder="escribir nombre">
                  <label for="telefono" class="col-4 col-md-4 col-form-label">Telefono:</label>
                  <input type="tel" id="telefono" class="form-control" placeholder="escribir telefono">
                  <label for="direccion" class="col-4 col-md-4 col-form-label">Dirección:*</label>
                  <input type="text" id="direccion" class="form-control" placeholder="escribir dirección">
                  <div id="carrito" class="container-fluid form-group table-responsive">
                    <table class="table"id="lista-compra" >
                        <thead>
                          <tr>
                            <th  scope="col">Imagen</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Precio</th>
                            <th scope="col">Cantidad</th>
                            <th scope="col">Sub Total</th>
                          </tr>
                        </thead>
                        <tbody>
                          <!--Aqui va la información de los productos de la compra -->
                        </tbody>
                        <tr>
                            <th colspan="4" scope="col" class="text-center">Total:
                                <p id="totalCompra"></p>
                            </th>
                        </tr>
                      </table>
                  </div>
                  <!-- agrengado el spinner -->
                  <div class="inactivo" id="spinner">
                    <div class="spinner">
                      <div class="rect1"></div>
                      <div class="rect2"></div>
                      <div class="rect3"></div>
                      <div class="rect4"></div>
                      <div class="rect5"></div>
                    </div>
                  </div>
              </div>                 
              <button type="submit" class="btn btn-primary">Finalizar Pedido</button>
              </form>
              <div class="row justify.content-center d-none" id="spinner">
                  <div class="spinner">
                      <div class="dot1"></div>
                  </div>
              </div>                            
        </div>
<!--fin de canvas-->
      </div>
      </div>
  </div>
</div>
