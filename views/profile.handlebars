<form action="/registro" method="POST" enctype="multipart/form-data">
    <!-- Otros campos del formulario (por ejemplo, nombre, apellido, correo, etc.) -->
    
    <!-- Campo para cargar documentos -->
    <label for="documentos">Documentos:</label>
    <input type="file" name="documentos" id="documentos" accept=".pdf, .doc, .docx"> <!-- Puedes ajustar las extensiones permitidas según tus necesidades -->
    
    <!-- Botón de envío -->
    <button class="btn btn-primary" type="submit">Actualizar</button>
</form>
